extends layout.pug
block content 
    h1= "Create a post here!"
    form(method='POST')
        label(for='title') Title:
        input#title.form-control(type='text', placeholder='Post Title' name='title' min=1 max=10000 required value=(undefined===post ? '' : post.title) )
        label(for='message') Message:
        textarea#message.form-control( placeholder='Post Message' name='message' required value=(undefined===post ? '' : post.message))
        label(for='publish-date') Published:
        input#published.form-control(type="checkbox" value="true" name='published' checked=(!(undefined===post || undefined === post.published || post.published === false)))
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
        for error in errors
            li!= error.msg