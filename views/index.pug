extends layout

block content
  h1= title
  p Welcome to #{title}
  if currentUser
    p Hello #{currentUser.username}!
    if posts 
      ul 
        for post in posts 
          li 
            a(href="/post/"+ post._id) 
              p #{post.title}
            p Publish Date: #{post.publish_date}
            if(post.publish_date > (new Date()))
              p Post unpublished


            


