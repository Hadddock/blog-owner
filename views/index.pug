extends layout

block content
  h1= title
  p Welcome to the blog admin page. 
  if !currentUser
    p Please login to an admin account to continue
  if currentUser
    p Hello #{currentUser.username}!
    if posts 
      ul 
        for post in posts 
          li 
            a(href="/post/"+ post._id) 
              p #{post.title}
            if post.published 
              p published 
            else 
              p unpublished

            


