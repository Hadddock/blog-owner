extends layout.pug
block content 
    h1= "Edit this post!"
    form(method='post')
        label(for='title') Title:
        input#title.form-control(type='text', placeholder='Post Title' name='title' min=1 max=10000 required value=(undefined===post ? '' : post.title) )
        label(for='message') Message:
        textarea#message.form-control(  name='message' required ) #{(undefined===post ? '' : post.message)}
        label(for='publish-date') Publish Date:
        input#publish-date.form-control(type="datetime-local", name='publish_date' value=(undefined===post ? '' : post.publish_date_local))
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
        for error in errors
            li!= error.msg